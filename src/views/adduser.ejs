<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">

    <!-- BOOTSTRAP 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <!-- MAIN CSS -->
    <link rel="stylesheet" href="/css/login.css";>

    <title>Capacitaciones Contables | Registro</title>
</head>
<body class="bg-light">
    <div class="animate">
        <div class="row content justify-content-center">
            <div class="col-md-4 login">
                <div class="card py-3 px-5">
                    <div class="card-body text-center">
                        <div class="container">
                            <form action="/adduser" method="post">
                                <div id="header">
                                    <img src="./img/Logo Instagram.png" alt="logo" width="230px" class="img-fluid">
                                    <h5 class="w-75 mx-auto mt-3">Registro de usuarios</h5>
                                </div>
                                <div class="form-floating mt-3">
                                    <input type="text" class="form-control" name="nombre" id="nombre" placeholder="Nombre" required>
                                    <label for="nombre">Nombre</label>
                                </div>
                                <div class="form-floating mt-3">
                                    <input type="text" class="form-control" name="apellido" id="apellido" placeholder="Apellido" required>
                                    <label for="apellido">Apellido</label>
                                </div>
                                <div class="form-floating mt-3">
                                    <input type="text" class="form-control" name="user" id="user" placeholder="Ingrese un usuario" required>
                                    <label for="user">Ingrese un usuario</label>
                                </div>
                                <div class="form-floating mt-3">
                                    <input type="password" name="pass" id="pass" class="form-control" placeholder="Contraseña" required>
                                    <label for="pass">Contraseña</label>
                                </div>
                                <select class="form-select mt-3" name="modulos" id="modulos">
                                        <option selected>Modulos</option>
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                </select>
                                
                                <div class="d-flex justify-content-center mt-4">
                                    <input type="submit" value="Crear usuario" class="btn btn-outline-dark btn-lg">
                                </div>
                            </form>

                            <% if(signupMessage.length > 0){%>
                                <p class="text-danger mt-3"><%= signupMessage %></p>
                            <% }%>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    

    <!-- SCRIPTS BOOTSTRAP -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
    <!-- SCRIPTS FONTAWESOME -->
    <script src="https://kit.fontawesome.com/433de9bf63.js" crossorigin="anonymous"></script>
    <!-- SCRIPT PROPIO -->
    <script>
        const d = document, w = window;
        const mql = w.matchMedia("(min-width:1360px)");

        const resp = function(){
            if(!mql.matches){
                d.querySelector(".login").classList.replace("col-md-4", "col-md-6");
            }
            else{
                d.querySelector(".login").classList.replace("col-md-6", "col-md-4");
            }
        }

        d.addEventListener("DOMContentLoaded", resp);
        w.addEventListener("resize",resp);
    </script>
</body>
</html>